FROM node:18-alpine

# Install system dependencies for USB support
RUN apk add --no-cache \
    libusb-dev \
    eudev-dev \
    linux-headers \
    make \
    g++ \
    python3

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

# Change ownership
RUN chown -R nodejs:nodejs /app
USER nodejs

CMD ["npm", "start"]